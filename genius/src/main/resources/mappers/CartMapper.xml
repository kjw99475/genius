<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/schema/mybatis-3-mapper.dtd">
<mapper namespace="org.fullstack4.genius.mapper.CartMapper">
    <insert id="regist">
        INSERT INTO tbl_cart(member_id,book_code,quantity,reg_date) VALUES (#{member_id},#{book_code},#{quantity},NOW())
    </insert>
    <select id="listAll" resultType="org.fullstack4.genius.domain.CartVO">
        select cart_idx,member_id,A.book_code,A.quantity,reg_date,B.book_name
        from tbl_cart as A
        INNER JOIN tbl_book AS B where B.book_code=A.book_code
    </select>
</mapper>