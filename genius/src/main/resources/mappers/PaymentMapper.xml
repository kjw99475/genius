<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/schema/mybatis-3-mapper.dtd">
<mapper namespace="org.fullstack4.genius.mapper.PaymentMapper">
    <select id="view" resultType="org.fullstack4.genius.domain.PaymentVO">
    select payment_idx,payment_num,member_id,price,method,company,reg_date,use_type
    from tbl_payment
    where member_id=#{param1}
    </select>

    <insert id="charge">
        INSERT INTO tbl_payment(payment_num,member_id,price,method,company,reg_date,use_type)
        VALUES (#{payment_num},#{member_id},#{price},#{method},#{company},NOW(),'포인트 충전')
    </insert>

    <select id="pointview" resultType="int">
        select point
        from tbl_member
        where member_id=#{param1}
    </select>

    <select id="listAll" resultType="org.fullstack4.genius.domain.PaymentVO">
        select payment_idx,payment_num,member_id,price,method,company,reg_date,use_type
        from tbl_payment
        where member_id=#{param1}
    </select>
</mapper>